#ifndef NGINE_CONFIG_HPP_IN
#define NGINE_CONFIG_HPP_IN_HPP

// Versioning
#define NGINE_VERSION "@Ngine_VERSION@"
#define NGINE_VERSION_MAJOR @Ngine_VERSION_MAJOR@
#define NGINE_VERSION_MINOR @Ngine_VERSION_MINOR@
#define NGINE_VERSION_PATCH @Ngine_VERSION_PATCH@
#define NGINE_VERSION_SUFFIX "@Ngine_VERSION_SUFFIX@"

// Desktop
#cmakedefine PLATFORM_DESKTOP

// UWP
#cmakedefine PLATFORM_UWP

// OpenGL Family
#cmakedefine NGINE_ENABLE_OPENGL

// OpenGL ES Family
#cmakedefine NGINE_ENABLE_OPENGLES

// DirectX 11
#cmakedefine NGINE_ENABLE_DIRECTX

// Vulkan
#cmakedefine NGINE_ENABLE_VULKAN

// Windows
#if defined(_WIN32)
#include <Windows.h>
#endif

// DLL imports
#if defined(_WIN32) && defined(NGINE_EXPORTS)
#define NEAPI __declspec(dllexport) // Windows DLL Export
#elif defined(_WIN32) && defined(NGINE_SHARED)
#define NEAPI __declspec(dllimport) // Windows DLL Import
#else
#define NEAPI
#endif

#endif //NGINE_CONFIG_HPP_IN
